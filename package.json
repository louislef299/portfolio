{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Personal portfolio website with Hugo + Bun",
  "type": "module",
  "scripts": {
    "dev": "bun run build:dev",
    "build:dev": "bun build src/main.ts --outdir static/js --watch --sourcemap",
    "build:prod": "bun build src/main.ts --outdir static/js --minify --sourcemap",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/leaflet": "^1.9.21",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "leaflet": "^1.9.4"
  }
}
